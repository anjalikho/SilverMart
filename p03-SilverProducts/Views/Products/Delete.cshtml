@model p03_SilverProducts.Models.Product

@{
    ViewBag.Title = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<style>
    .btn-transparent {
        background-color: rgba(0, 0, 0, 0.4);
    }
</style>

  @using (Html.BeginForm())
  {
    @Html.AntiForgeryToken()

    <div class="row ">
        <hr />
        <div class="col-md-5 text-left">
            <dl class="dl-horizontal">
                <dd>
                    <img src="~/Images/@Html.DisplayFor(model => model.Image)" style="border:1px solid grey" height="200" width="200">
                </dd>
            </dl>
        </div>
        <div class="col-md-5 text-right">
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Items)
                </dt>
                
                <dd>
                    @Html.DisplayFor(model => model.Items)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Period)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Period)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Price)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.Description)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>
        </div>
    </div>
    <div class="col-md-12 text-center">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-info btn-sm btn-transparent" /> |
            @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-info btn-sm btn-transparent" })
        </div>
    </div>
  }

